<launch>
<!-- Start tilt joint controller -->

    <rosparam file="$(find assimilation)/src/Pan and Tilt/Launch/config/pan_tilt_scan.yaml" command="load"/>
    <node name="dynamixel_manager" pkg="dynamixel_controllers" type="controller_manager.py" required="true" output="screen">
        <rosparam>
            namespace: dxl_manager
            serial_ports:
                pan_tilt_port:
                    port_name: "/dev/ttyUSB0"
                    baud_rate: 57600
                    min_motor_id: 1
                    max_motor_id: 25
                    update_rate: 20
        </rosparam>
    </node>    
    <node name="controller_spawner" pkg="dynamixel_controllers" type="controller_spawner.py"
          args="--manager=dxl_manager
                --port pan_tilt_port
                joint1_controller                       
                joint2_controller
                "
          output="screen"/> 
    

    <node pkg="assimilation" type="Pan_and_tilt_scan.py" name="Pan_tilt_scan" output="screen"/>
    
    <node pkg="assimilation" type="img_recorder.py" name="img_recorder" />
    
</launch>